<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.google.androidqw.ui.task.activity.SvgAnimActivity">
    <com.google.androidqw.ui.task.activity.LoadingPathAnimView
        android:id="@+id/loadingPath"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:paddingTop="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_30"
        android:background="@android:color/black"
        android:layout_height="@dimen/dp_60"/>


    <com.mcxtzhang.pathanimlib.PathAnimView
        android:id="@+id/pathView_tomorrow"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/color_fd9405"
        android:padding="5dp"/>
    <com.mcxtzhang.pathanimlib.PathAnimView
        android:id="@+id/pathView_pay"
        android:layout_width="wrap_content"
        android:background="@color/color_05acff"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="5dp"/>
</LinearLayout>
