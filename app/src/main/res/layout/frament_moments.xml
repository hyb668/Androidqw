<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <view.NormarlTitle
        android:id="@+id/titlt_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />


    <LinearLayout
        android:id="@+id/ll_moments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_gray_deepgray"
        android:padding="10dp"
        android:text="moments">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/zone"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="@string/friend_zone_title"
            />
    </LinearLayout>


    <com.google.androidqw.view.LayouItemView
        android:id="@+id/comment_utilsView"
        android:padding="10dp"
        android:background="@drawable/selector_gray_deepgray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:itemDetail="Task列表"
        app:itemPicBackground="@drawable/circle"/>
</LinearLayout>